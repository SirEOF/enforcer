{
    "manifest_version": 2,
    "name": "Casper Enforcer",
    "description": "Force CSP policies on websites",
    "version": "0.2",
    "background": {
        "scripts": ["/js/jquery.js", "/js/background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "/img/happy.png",
        "default_popup": "/views/popup.html"
    },
    "permissions": [
        "http://*/",
        "https://*/",
        "webRequestBlocking",
        "webRequest",
        "tabs"
    ]
}
